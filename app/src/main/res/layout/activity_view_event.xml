<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.georgicaracu.thehiddencampus.ViewEvent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/label_location_view_event"
            android:id="@+id/label_location"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/map_med"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="false" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/label_date_view_event"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Time: 8pm."
            android:id="@+id/textView2"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description: this party will be amazing ..."
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Attending: Nikki K, Johnny H ..."
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/menu_item_margin"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="@dimen/btn_default"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/button3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/abc_text_size_button_material" />

            <Button
                android:layout_width="@dimen/btn_default"
                android:layout_height="wrap_content"
                android:text="Participate"
                android:id="@+id/button4"
                android:textSize="@dimen/abc_text_size_button_material" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
